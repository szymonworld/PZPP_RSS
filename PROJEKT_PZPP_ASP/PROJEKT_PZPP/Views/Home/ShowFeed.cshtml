@model List<PROJEKT_PZPP.Models.ChannelItem>
@{ 
    string tileType = "";
}


<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 style="color:white;"><strong>@ViewBag.ChannelTitle</strong></h1>
        </div>
        <div class="col-md-9">
            <button class="button" style="vertical-align:middle" onclick="backToChannels()"><span>Powrót </span></button>
        </div>
    </div>

        @for (int i = 0; i < Model.Count; i++)
        {
            <a href="@Model[i].Link">
                <div class="col-sm-3 col-md-3">

                    @{
                        tileType = Model[i].State == true ? "tile blue" : "tile red";
                    }

                    <div class="@tileType">
                        <h5 class="title">@Model[i].Title</h5>
                        <p>@Model[i].Description</p>
                    </div>

                 </div>
            </a>
        }
</div>